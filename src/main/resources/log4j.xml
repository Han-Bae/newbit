<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p: %c - %m%n" />
		</layout>
	</appender>
	
	
	<!-- account Appender -->
		<!-- 계정 기능 로그 -->
	<appender name="accountAppender" class="org.apache.log4j.FileAppender">
		<param name="File" value="${catalina.base}/src/main/resources/log/account.log" />
		<param name="Append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p - %d{yyyy/MM/dd} : %m%n" />
		</layout>
	</appender>
		<!-- 결제 기능 로그 -->
	<appender name="paymentAppender" class="org.apache.log4j.FileAppender">
		<param name="File" value="${catalina.base}/src/main/resources/log/payment.log" />
		<param name="Append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p - %d{yyyy/MM/dd} : %m%n" />
		</layout>
	</appender>
	 
	 	
	<!-- 데이터삭제 어펜더 -->
	<appender name="delAppender" class="org.apache.log4j.FileAppender">
		<param name="File" value="${catalina.base}/src/main/resources/log/del.log" />
		<param name="Append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p - %d{yyyy/MM/dd HH:mm:ss} : %m%n" />
		</layout>
	</appender>
	
	
	<!-- Application Loggers -->
	<logger name="com.newbit.www">
		<level value="info" />
		<appender-ref ref="file" /> <!-- 3. -->
	</logger>
	<!-- 
	<logger name="surveyLog">
		<level value="info" />
		<appender-ref ref="surveyLog" /> 3.
	</logger>
	 -->
	<logger name="accountLog">
		<level value="info" />
		<appender-ref ref="accountAppender" /> <!-- 3. -->
	</logger>
	<logger name="paymentLog">
		<level value="info" />
		<appender-ref ref="paymentAppender" /> <!-- 3. -->
	</logger>
	<logger name="delLog">
		<level value="info" />
		<appender-ref ref="delAppender" />
	</logger>
	
	<!-- 3rdparty Loggers -->
	<logger name="org.springframework.core">
		<level value="info" />
	</logger>
	
	<logger name="org.springframework.beans">
		<level value="info" />
	</logger>
	
	<logger name="org.springframework.context">
		<level value="info" />
	</logger>

	<logger name="org.springframework.web">
		<level value="info" />
	</logger>

	<!-- Root Logger -->
	<root>
		<priority value="warn" />
		<appender-ref ref="console" />
	</root>
	
</log4j:configuration>